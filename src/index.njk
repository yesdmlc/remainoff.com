{% extends "layouts/base.njk" %}

{% block hero %}
<section class="hero">
  <figure class="hero-image">
    <div class="cover-wrapper">
      <img src="/images/uploads/remainoff-cover-image.jpg" alt="Remain Off hero image" class="entry-thumb"/>
      <div class="hero-text">
        <h1 class="site-title">Leaving gently, arriving slowly.</h1>
        <p class="site-subtitle">Letting go, holding on, and documenting the quiet weight of change.</p>
      </div>
    </div>
  </figure>
</section>

<section class="travel-line">
  <h2 class="section-heading">Follow My Journey for 2025</h2>
  <h2 class="travel-heading">Where I’m Headed</h2>
  <p class="travel-context">
    A personal line of movement — places I’ll arrive in, linger, and leave. Updated as memory catches up.<br>
    First departure: September 23, 2025.
  </p>
  <ul class="travel-stops">
    <li class="stop current">Vancouver</li>
    <li class="stop upcoming">Hong Kong</li>
    <li class="stop upcoming">Chiang Mai</li>
    <li class="stop upcoming">Bangkok</li>
    <li class="stop upcoming">More Stops Soon</li>
  </ul>
</section>
{% endblock %}

{% block content %}
<section class="recent-entries">
  <h2 class="section-heading">Recent Journal Log</h2>
  <ul class="entry-feed">
    {% for entry in collections.entries | reverse %}
    <li class="entry-preview">
      <div class="entry-container">
        <a href="{{ entry.url }}">
          <div class="cover-wrapper">
            <img src="{{ entry.data.image }}" alt="Image for {{ entry.data.title }}" class="entry-thumb"/>
          </div>
        </a>
        <h3 class="entry-title">
          <a href="{{ entry.url }}">{{ entry.data.title }}</a>
        </h3>
        <p class="entry-date">{{ entry.date | date("MMMM d, yyyy") }}</p>
        <p class="entry-excerpt">
          {{ entry.templateContent | stripHtml | limitWords(40) }}
        </p>
      </div>
    </li>
    {% endfor %}
  </ul>
</section>
{% endblock %}