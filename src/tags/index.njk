{% extends "layouts/base.njk" %}

{% block content %}
<section class="linkinbio-grid">
  <h1 class="section-heading">More from Instagram</h1>
  <ul class="grid-list">
    {% for entry in collections.entries %}
      {% if entry.data.gridFeatured %}
        <li class="grid-item">
          <a href="{{ entry.url }}">
            <img src="{{ entry.data.image }}" alt="Image for {{ entry.data.title }}">
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

  <!-- Debug: Show which entries are being picked up -->
  <div class="debug-output">
    <h2>Debug Output</h2>
    <ul>
      {% for entry in collections.entries %}
        <li>{{ entry.data.title }} â€” gridFeatured: {{ entry.data.gridFeatured }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endblock %}
